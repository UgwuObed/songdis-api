{
  "name": "songdis-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "repository": "https://github.com/UgwuObed/songdis-api.git",
  "author": "Sir_Altruist <eshooluwasegun98@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "npm run migrate && cross-env nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "test": "mocha -r ts-node/register --extension ts --exit --timeout 10000 '__tests__/**/*.ts'",
    "copy-js": "cp src/**/*.js dist/config/",
    "build": "rimraf dist && tsc && npm run copy-js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslintfix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "prepare": "is-ci || husky install",
    "migration:create": "npx sequelize-cli migration:generate",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:rollback:recent": "npx sequelize-cli db:migrate:undo",
    "migrate:rollback:all": "npx sequelize-cli db:migrate:undo:all",
    "model:create": "npx sequelize-cli model:generate",
    "seed:create": "npx sequelize-cli see:generate",
    "seed:execute": "npx sequelize-cli db:seed:all",
    "seed:rollback:recent": "npx sequelize-cli db:seed:undo",
    "seed:rollback:all": "npx sequelize-cli db:seed:undo:all",
    "prestart": "npm run migrate"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "lint-staged": {
    "*.{ts}": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "cp": "^0.2.0",
    "datauri": "^4.1.0",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^8.3.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "otplib": "^12.0.1",
    "parse-data-uri": "^0.2.0",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "redis": "^4.6.7",
    "rimraf": "^5.0.1",
    "sequelize": "^6.32.1",
    "sequelize-bcrypt": "^1.2.0",
    "sequelize-cli": "^6.6.2",
    "socket.io": "^4.7.5",
    "voucher-code-generator": "^1.3.0",
    "zeptomail": "^6.0.0"
  },
  "devDependencies": {
    "@babel/register": "^7.23.7",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.3",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.5",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.4.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.9",
    "@types/voucher-code-generator": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}